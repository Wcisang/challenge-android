<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:id="@+id/banner_fragment"
            android:name="br.com.wcisang.alojinha.ui.fragment.BannerFragment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:clipToPadding="false" />

        <fragment
            android:id="@+id/category_fragment"
            android:name="br.com.wcisang.alojinha.ui.fragment.CategoryFragment"
            android:layout_width="match_parent"
            android:layout_height="150dp" />


        <fragment
            android:id="@+id/sellers_fragment"
            android:name="br.com.wcisang.alojinha.ui.fragment.BestSellersFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

